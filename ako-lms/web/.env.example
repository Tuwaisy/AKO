# Web Environment Variables

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# Authentication
NEXT_PUBLIC_JWT_COOKIE_NAME=ako_access_token
NEXT_PUBLIC_REFRESH_COOKIE_NAME=ako_refresh_token

# Feature Flags
NEXT_PUBLIC_FEATURE_MFA=true
NEXT_PUBLIC_FEATURE_DRM=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_PARENT_PORTAL=true

# Media Configuration
NEXT_PUBLIC_CDN_BASE_URL=http://localhost:9000
NEXT_PUBLIC_VIDEO_PLAYER_SKIN=ako-theme
NEXT_PUBLIC_MAX_VIDEO_QUALITY=1080p

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,ar
NEXT_PUBLIC_DEFAULT_TIMEZONE=Africa/Cairo

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Error Reporting (optional)
NEXT_PUBLIC_SENTRY_DSN=

# Development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_API=false

# Theme
NEXT_PUBLIC_BRAND_NAME="AKO Courses"
NEXT_PUBLIC_BRAND_LOGO_URL=/logo.svg
NEXT_PUBLIC_FAVICON_URL=/favicon.ico

# Social Links
NEXT_PUBLIC_SUPPORT_EMAIL=support@akocourses.com
NEXT_PUBLIC_WEBSITE_URL=https://akocourses.com
NEXT_PUBLIC_PRIVACY_URL=https://akocourses.com/privacy
NEXT_PUBLIC_TERMS_URL=https://akocourses.com/terms
